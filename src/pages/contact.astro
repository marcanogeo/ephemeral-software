---
import Layout from '../layouts/Layout.astro';
import DynamicBanner from '../components/DynamicBanner.astro';
import inprogrees from '../assets/in-progress.svg';
---

<Layout pageTitle="Contact - Ephemeral">
    <DynamicBanner 
        pageType="contact"
        title="Contact Us"
        description="Ready to start your next project? Get in touch with our team of experts and let's build something amazing together."
    />
    
    <section id="contact-form" class="pattern-background py-16">
        <div class="min-h-screen pt-24 px-4">
            <div class="max-w-4xl mx-auto text-center">
                <h2 class="text-4xl font-bold text-gray-800 mb-8">Coming Soon</h2>
                <p class="text-gray-600 mb-8 text-lg max-w-2xl mx-auto">
                    We're working on creating an amazing contact experience for you. 
                    In the meantime, feel free to reach out to us directly.
                </p>
                <img src={inprogrees.src} alt="Contact Us" class="w-auto h-64 mx-auto rounded-lg shadow-md mb-8"/>
                <div class="mt-8">
                    <a href="/" class="text-blue-600 hover:text-blue-800 underline text-lg">‚Üê Back to Home</a>
                </div>
            </div>
        </div>
    </section>
</Layout>