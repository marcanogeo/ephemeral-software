---
import Layout from '../layouts/Layout.astro';
import '../styles/global.css';
import DynamicBanner from '../components/DynamicBanner.astro';
import Info from '../components/Info.astro';
import Services from '../components/Services.astro';
import Brands from '../components/Brands.astro';
import { backgroundAssets } from '../assets';

// Preload de la imagen del banner para evitar flash
const homeBg = backgroundAssets.home;
---

<Layout pageTitle="Home - Ephemeral" backgroundType="home">
	<!-- Preload crítico del fondo de banner -->
	<link rel="preload" as="image" href={homeBg.src} />
	
	<DynamicBanner 
		pageType="home"
		title="Customized Tecnology Solutions to Boost Your Business"
		description="Innovative technology solutions for the modern world. We create powerful software and systems that drive your business forward."
		ctaText="Request a free consultation"
		ctaLink="#services"
	/>
	<Info 
		title="About Us"
		description="At Ephemeral, we are experts in the development of computer systems and applications designed to solve the most complex technological challenges. Since our founding in 2017, we have worked with leading companies in the industry, providing innovative solutions that drive efficiency and competitiveness."
		description2="We are a team of passionate developers dedicated to creating innovative technology solutions."
	/>
	<Services />
	<Info
	title = "Why Choose Us"
	description = "We combine technical expertise with a deep understanding of business needs to deliver solutions that truly make a difference."
	description2 = "Our commitment to quality, innovation, and customer satisfaction sets us apart in the tech industry."
	/>
	<Brands />
</Layout>

<style>
    /* Optimizaciones específicas para transiciones suaves en home */
    .dynamic-banner {
        min-height: 100vh;
        background: #04335C;
    }
</style>
