---
import Layout from '../layouts/Layout.astro';
import DynamicBanner from '../components/DynamicBanner.astro';
import { backgroundAssets } from '../assets';

// Preload de la imagen del banner para evitar flash
const aboutBg = backgroundAssets.about;
---

<Layout pageTitle="About Us - Ephemeral" backgroundType="about">
    <!-- Preload crítico del fondo de banner -->
    <link rel="preload" as="image" href={aboutBg.src} />
    
    <DynamicBanner 
        pageType="about"
        title="About Ephemeral"
        description="Passionate developers creating innovative technology solutions since 2017. Discover our journey and expertise."
    />
    
    <section id="content" class="pattern-background py-16">
        <div class="min-h-screen pt-24 px-4">
            <div class="max-w-4xl mx-auto">
                <h2 class="text-4xl font-bold mb-8 text-center bg-clip-text">
                    Our Story
                </h2>
                <div class="text-center max-w-3xl mx-auto">
                    <p class="text-gray-700 mb-6 text-lg leading-relaxed">
                        At Ephemeral, we are experts in the development of computer systems and applications 
                        designed to solve the most complex technological challenges. Since our founding in 2017, 
                        we have worked with leading companies in the industry, providing innovative solutions 
                        that drive efficiency and competitiveness.
                    </p>
                    <p class="text-gray-600 mb-6 text-lg">
                        We are a team of passionate developers dedicated to creating innovative technology solutions.
                    </p>
                </div>
            </div>
        </div>
    </section>
</Layout>

<style>
    /* Optimizaciones específicas para transiciones suaves en about */
    .dynamic-banner {
        min-height: 100vh;
        background: #04335C;
    }
    
    /* Transición suave para la sección de contenido */
    #content {
        animation: slideInFromBottom 0.6s ease-out 0.5s both;
    }
    
    @keyframes slideInFromBottom {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>