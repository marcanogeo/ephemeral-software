<section class="bg-white py-16">
  <div class="max-w-[800px] mx-auto px-6">
    <h2 class="text-3xl md:text-4xl font-bold text-gray-800 text-center mb-6">
      Schedule your consultation
    </h2>
    <p class="text-lg text-gray-600 text-center mb-12">
      Tell us about your project or technological challenge and our team will get in touch
      with you in less than <span class="font-semibold text-blue-600">24 hours</span>.
    </p>

    <form action="https://formsubmit.co/TU_CORREO@ejemplo.com" method="POST" class="space-y-6">
      <div class="grid md:grid-cols-2 gap-6">
        <div>
          <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
          <input type="text" id="name" name="name" required
            class="mt-2 block w-full rounded-lg border border-gray-300 px-4 py-2 focus:ring-2 focus:ring-blue-600 focus:outline-none" />
        </div>
        <div>
          <label for="company" class="block text-sm font-medium text-gray-700">Company</label>
          <input type="text" id="company" name="company"
            class="mt-2 block w-full rounded-lg border border-gray-300 px-4 py-2 focus:ring-2 focus:ring-blue-600 focus:outline-none" />
        </div>
      </div>

      <div class="grid md:grid-cols-2 gap-6">
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
          <input type="email" id="email" name="email" required
            class="mt-2 block w-full rounded-lg border border-gray-300 px-4 py-2 focus:ring-2 focus:ring-blue-600 focus:outline-none" />
        </div>
        <div>
          <label for="phone" class="block text-sm font-medium text-gray-700">Phone</label>
          <input type="tel" id="phone" name="phone"
            class="mt-2 block w-full rounded-lg border border-gray-300 px-4 py-2 focus:ring-2 focus:ring-blue-600 focus:outline-none" />
        </div>
      </div>

      <div>
        <label for="message" class="block text-sm font-medium text-gray-700">Message</label>
        <textarea id="message" name="message" rows="5" required
          class="mt-2 block w-full rounded-lg border border-gray-300 px-4 py-2 focus:ring-2 focus:ring-blue-600 focus:outline-none"></textarea>
      </div>

      <div class="text-center">
        <button type="submit"
          class="bg-blue-600 text-white px-8 py-3 rounded-full shadow-lg hover:bg-blue-700 transition">
          Schedule consultation
        </button>
      </div>
    </form>
  </div>
</section>
<style>
  /* Estilos espec√≠ficos para ContactForm */
  section {
    background: #f9fafb;
  }
  h2 {
    color: #1f2937;
  }
  p {
    color: #4b5563;
  }
  input, textarea {
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
  }
  button {
    box-shadow: 0 10px 15px -3px rgba(59, 130, 246, 0.4), 0 4px 6px -2px rgba(59, 130, 246, 0.1);
  }
</style>
