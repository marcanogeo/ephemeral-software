            {cardData.map((card, index) => {
                const icon = svgIcons[index];
                return (
                    <div class="bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition-shadow duration-300">
                        <div class="flex-row items-center mb-4">
                            <div class="mr-4 flex justify-center mb-4">
                                <svg 
                                    xmlns="http://www.w3.org/2000/svg" 
                                    viewBox={icon.viewBox} 
                                    fill="currentColor" 
                                    class="w-12 h-12 text-(--color-primary)"
                                >
                                    <path fill-rule="evenodd" d={icon.path} clip-rule="evenodd" />
                                </svg>
                            </div>
                            <h3 class="text-xl font-bold text-gray-800">{card.title}</h3>
                        </div>
                        <p class="text-gray-600 leading-relaxed">{card.description}</p>
                    </div>
                );
            })}
        </div>
    <div class="p-6">
        <h5 class="card-title text-center font-semibold mb-3 text-gray-800 hover:text-blue-600 transition-colors">{title}</h5>
