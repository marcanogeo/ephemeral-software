---
import logo from '../assets/logo.svg';
import '../styles/global.css';
import Links from '../components/ItemLink.astro';
---

<nav class="shadow-sm w-full fixed top-0 left-0 right-0 bg-white/95 backdrop-blur-sm z-[9999]">
    <div class="w-full max-w-7xl mx-auto px-4 flex justify-between items-center py-4">
        <!-- Logo -->
        <div class="flex items-center">
            <a href="/" class="cursor-pointer hover:opacity-80 transition-opacity duration-200">
                <img src={logo.src} alt="Ephemeral Logo" class="w-50 h-50 md:w-auto md:h-auto" />
            </a>
        </div>
        
        <!-- Navigation Links (Desktop & Mobile) -->
        <Links />
    </div>
</nav>

<style>
    /* Asegurar que la navegación funcione correctamente */
    nav {
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
    }
    
    /* Asegurar que el z-index funcione con el menú móvil */
    nav {
        position: relative;
    }
</style>





