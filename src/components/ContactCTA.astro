---
// ContactCTA.astro - Componente enfocado √∫nicamente en Call-to-Action de contacto

interface Props {
  title?: string;
  description?: string;
  callout?: string;
  ctaText?: string;
  ctaHref?: string;
  variant?: 'default' | 'gradient' | 'minimal';
}

const {
  title = "Construyamos juntos el futuro digital de tu negocio",
  description = "En Ephemeral creemos que cada proyecto merece un socio estrat√©gico, no solo un proveedor. Por eso trabajamos contigo para transformar ideas en soluciones tecnol√≥gicas reales, innovadoras y seguras.",
  callout = "üí° Cu√©ntanos tu reto hoy mismo y en menos de 24 horas tendr√°s una respuesta de nuestro equipo. Hagamos de tu visi√≥n una ventaja competitiva.",
  ctaText = "Empecemos ahora",
  ctaHref = "/form", // ‚úÖ Ruta corregida sin barra final
  variant = "default"
} = Astro.props;
---

<section class={`cta-section cta-section--${variant}`}>
  <div class="cta-container">
    <h2 class="cta-title">
      {title}
    </h2>

    <p class="cta-description">
      En <span class="brand-highlight">Ephemeral</span> {description.replace('En Ephemeral ', '')}
    </p>

    <p class="cta-callout">
      {callout}
    </p>

    <a
      href={ctaHref}
      class="cta-button"
      aria-label={`${ctaText} - Contactar con Ephemeral`}
    >
      {ctaText}
    </a>
  </div>
</section>

<style>
  /* === CTA SECTION === */
  .cta-section {
    background: white;
    padding: 5rem 0;
    position: relative;
  }

  .cta-section--gradient {
    background: linear-gradient(
      135deg,
      #3b82f6 0%,
      #1e40af 50%,
      #1e3a8a 100%
    );
  }

  .cta-section--gradient .cta-title,
  .cta-section--gradient .cta-description,
  .cta-section--gradient .cta-callout {
    color: white;
  }

  .cta-section--minimal {
    padding: 3rem 0;
    background: #f8fafc;
  }

  .cta-container {
    max-width: 1440px;
    margin: 0 auto;
    padding: 0 1.5rem;
    text-align: center;
  }

  /* === TYPOGRAPHY === */
  .cta-title {
    font-size: clamp(1.875rem, 4vw, 2.5rem);
    font-weight: 700;
    line-height: 1.2;
    color: #1f2937;
    margin-bottom: 1.5rem;
    letter-spacing: -0.025em;
  }

  .cta-description {
    font-size: clamp(1.125rem, 2.5vw, 1.25rem);
    line-height: 1.6;
    color: #4b5563;
    max-width: 48rem;
    margin: 0 auto 1.5rem;
  }

  .brand-highlight {
    font-weight: 600;
    color: #3b82f6;
  }

  .cta-callout {
    font-size: clamp(1rem, 2vw, 1.125rem);
    line-height: 1.7;
    color: #4b5563;
    max-width: 32rem;
    margin: 0 auto 2.5rem;
  }

  /* === CTA BUTTON === */
  .cta-button {
    display: inline-block;
    background: #3b82f6;
    color: white;
    font-weight: 500;
    padding: 0.875rem 2rem;
    border-radius: 9999px;
    text-decoration: none;
    box-shadow: 
      0 10px 15px -3px rgba(59, 130, 246, 0.4),
      0 4px 6px -2px rgba(59, 130, 246, 0.1);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .cta-button:hover {
    background: #1e40af;
    box-shadow: 
      0 20px 25px -5px rgba(59, 130, 246, 0.5),
      0 10px 10px -5px rgba(59, 130, 246, 0.2);
    transform: translateY(-2px);
  }

  .cta-button:focus {
    outline: none;
    box-shadow: 
      0 0 0 3px rgba(59, 130, 246, 0.5),
      0 10px 15px -3px rgba(59, 130, 246, 0.4);
  }

  .cta-button:active {
    transform: translateY(0);
  }

  /* === RESPONSIVE === */
  @media (max-width: 768px) {
    .cta-section {
      padding: 3rem 0;
    }

    .cta-container {
      padding: 0 1rem;
    }

    .cta-button {
      width: 100%;
      max-width: 280px;
    }
  }

  /* === ACCESSIBILITY === */
  @media (prefers-reduced-motion: reduce) {
    .cta-button {
      transition: none;
    }
  }

  @media (prefers-contrast: high) {
    .cta-button {
      border: 2px solid white;
    }

    .brand-highlight {
      text-decoration: underline;
    }
  }
</style>