---
import Navbar from '../components/Navigation.astro';

export interface Props {
    pageTitle: string;
    backgroundType?: 'home' | 'about' | 'services' | 'contact' | 'default';
    usePatternBackground?: boolean;
}

const { pageTitle, backgroundType = 'default', usePatternBackground = true } = Astro.props;
---
<!doctype html>
<html lang="es" class="h-full">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
	</head>
	<body class="h-full m-0 p-0 w-full" data-bg-type={backgroundType}>
		<Navbar />
		<main class="w-full min-h-screen relative">
		    <slot />
		</main>
	</body>
</html>

<style>
	/* Estrategia UX/UI: fondo limpio base, patrones aplicados selectivamente */
	body {
		position: relative;
		overflow-x: hidden;
		background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
	}
	
	/* Clase utilitaria para aplicar patrón de fondo en componentes específicos */
	.pattern-background {
		background-image: url('/src/assets/patternsbg.jpg');
		background-size: cover;
		background-position: center;
		background-repeat: repeat;
		position: relative;
	}
	
	/* Overlay mejorado para legibilidad del patrón */
	.pattern-background::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: 1;
		background: linear-gradient(
			135deg,
			rgba(255, 255, 255, 0.85) 0%,
			rgba(248, 250, 252, 0.75) 50%,
			rgba(226, 232, 240, 0.80) 100%
		);
		pointer-events: none;
	}
	
	/* Contenido sobre el patrón */
	.pattern-background > * {
		position: relative;
		z-index: 2;
	}
	
	/* Responsive adjustments */
	@media (max-width: 768px) {
		.pattern-background {
			background-attachment: scroll;
			background-size: cover;
		}
	}
</style>

